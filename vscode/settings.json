{
  // VSCode
  // #region
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.verticalScrollbarSize": 50,
  "editor.suggestSelection": "recentlyUsed",
  "editor.tabCompletion": "on",
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,
  "keyboard.dispatch": "keyCode",
  "files.autoSaveDelay": 800,
  "files.eol": "\n",
  "files.exclude": {
    ".DS_Store": true,
    "Icon[\r]": true,
    "**/__pycache__": true,
    "**/.eggs": true,
    "**/.ipynb_checkpoints": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true
  },
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "none",
  "editor.tokenColorCustomizations": {
    "functions": "#d6d12f"
  },
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#c979f7",
    "editor.selectionHighlightBackground": "#394185",
    "editor.findMatchHighlightBackground": "#264eff",
    "editor.findMatchBackground": "#ae00ff",
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f"
  },
  "git.mergeEditor": false,
  // #endregion
  // Python
  // #region
  "autoDocstring.docstringFormat": "numpy",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "notebook.diff.ignoreMetadata": true,
  "jupyter.askForKernelRestart": false,
  "python.analysis.autoImportCompletions": true,
  "python.formatting.yapfArgs": [
    "--style={column_limit: 84, indent_width: 4, SPLIT_BEFORE_NAMED_ASSIGNS=False}"
  ],
  "python.languageServer": "Pylance",
  "python.linting.flake8Args": [
    "--max-line-length=84",
    "--ignore=E741"
  ],
  "python.linting.flake8CategorySeverity.E": "Warning",
  "python.linting.flake8CategorySeverity.F": "Warning",
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "[python]": {
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "ms-python.python"
  },
  // #endregion
  // web develop
  "prettier.printWidth": 84,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  // LaTeX
  // #region
  "[latex]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoBuild.run": "onSave",
  // "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.message.latexlog.exclude": [
    "Font shape .* undefined.*",
    "Overfull.+too wide.*"
  ],
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-halt-on-error",
        "-outdir=%DOC%/",
        "%DOC%.tex"
      ],
    },
  ],
  // これコメントアウトしないとタイプセット遅くなる
  // "latex-workshop.latex.clean.fileTypes": [
  //   "*.aux",  // 目次や参考文献等の参照用
  //   "*.bbl",  // 参考文献の環境ファイル
  //   "*.blg",
  //   "*.idx",
  //   "*.ind",
  //   "*.lof",
  //   "*.lot",
  //   "*.out",
  //   "*.toc",
  //   "*.acn",
  //   "*.acr",
  //   "*.alg",
  //   "*.glg",
  //   "*.glo",
  //   "*.gls",
  //   "*.ist",
  //   "*.fls",
  //   "*.log",
  //   "*.fdb_latexmk",
  //   "*.synctex.gz",
  //   "*.dvi",
  //   // for Beamer files
  //   "_minted*",
  //   "*.nav",
  //   "*.snm",
  //   "*.vrb",
  //   "*.bcf",
  //   "*.run.xml"
  // ],
  // #endregion
  // ToDo Tree
  // #region
  "todo-tree.general.tags": [
    "TODO",
    "HACK",
    "FIXME"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "checklist",
    "type": "text",
    "fontWeight": "bold",
    "iconColour": "#2C7CFF"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "#e9e9e9"
    },
    "HACK": {
      "foreground": "#5c5c5c"
    },
    "FIXME": {
      "foreground": "#cc7b3c"
    }
  },
  // #endregion
  // MarkDown
  // #region
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "markdown.marp.enableHtml": true,
  "markdown.marp.themes": [
    "./yuji-theme.css"
  ],
  // #endregion
  // JSON
  // #region
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // #endregion
  // temporary settings
  // #region
  "[plaintext]": {
    "editor.language.colorizedBracketPairs": [
      [
        "(",
        ")"
      ]
    ]
  },
  "files.associations": {
    "*.gs": "javascript",
    ".env": "shellscript",
    "*.pdf": "code-text-binary"
  },
  "editor.inlineSuggest.enabled": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "pasteImage.path": "${projectRoot}/img",
  "csv-edit.readOption_hasHeader": "true",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "　": true
  },
  "todo-tree.regex.regex": "(%|//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)"
}
