{
  // general settngs #region
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.verticalScrollbarSize": 50,
  "editor.suggestSelection": "recentlyUsed",
  "editor.tabCompletion": "on",
  "editor.tokenColorCustomizations": {
    "functions": "#d6d12f"
  },
  "editor.inlineSuggest.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "　": true
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,
  "keyboard.dispatch": "keyCode",
  "files.autoSaveDelay": 800,
  "files.eol": "\n",
  "files.exclude": {
    ".DS_Store": true,
    "Icon[\r]": true,
    "**/__pycache__": true,
    "**/.eggs": true,
    "**/.ipynb_checkpoints": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true
  },
  "files.associations": {
    "*.gs": "javascript",
    ".env": "shellscript",
  },
  "git.mergeEditor": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "none",
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#c979f7",
    "editor.selectionHighlightBackground": "#394185",
    "editor.findMatchHighlightBackground": "#264eff",
    "editor.findMatchBackground": "#ae00ff",
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreview": false,
  "workbench.editorAssociations": {
    "*.pdf": "pdf.preview"
  },
  "[plaintext]": {
    "editor.language.colorizedBracketPairs": [
      [
        "(",
        ")"
      ]
    ]
  },
  // #endregion
  // Python #region
  "autoDocstring.docstringFormat": "numpy",
  "flake8.severity": {
    "E": "Warning",
    "F": "Warning"
  },
  "flake8.args": [
    "--ignore=E203"
  ],
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "notebook.diff.ignoreMetadata": true,
  "notebook.stickyScroll.enabled": true,
  "jupyter.askForKernelRestart": false,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  // #endregion
  // web develop #region
  "prettier.printWidth": 84,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // #endregion
  // LaTeX #region
  "[latex]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.message.badbox.show": false,
  "latex-workshop.latex.autoBuild.run": "onSave",
  // "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.message.latexlog.exclude": [
    "Font shape .* undefined.*",
    // "Overfull.+too wide.*"
    "^Underfull .hbox (badness .*)"
  ],
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-interaction=nonstopmode",
        "-halt-on-error",
        "-outdir=output/",
        "%DOC%.tex"
      ],
    },
  ],
  // これコメントアウトしないとタイプセット遅くなる
  // "latex-workshop.latex.clean.fileTypes": [
  //   "*.aux",  // 目次や参考文献等の参照用
  //   "*.bbl",  // 参考文献の環境ファイル
  //   "*.blg",
  //   "*.idx",
  //   "*.ind",
  //   "*.lof",
  //   "*.lot",
  //   "*.out",
  //   "*.toc",
  //   "*.acn",
  //   "*.acr",
  //   "*.alg",
  //   "*.glg",
  //   "*.glo",
  //   "*.gls",
  //   "*.ist",
  //   "*.fls",
  //   "*.log",
  //   "*.fdb_latexmk",
  //   "*.synctex.gz",
  //   "*.dvi",
  //   // for Beamer files
  //   "_minted*",
  //   "*.nav",
  //   "*.snm",
  //   "*.vrb",
  //   "*.bcf",
  //   "*.run.xml"
  // ],
  // #endregion
  // ToDo Tree #region
  "todo-tree.general.tags": [
    "TODO",
    "HACK",
    "FIXME"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "checklist",
    "type": "text",
    "fontWeight": "bold",
    "iconColour": "#2C7CFF"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "#e9e9e9"
    },
    "HACK": {
      "foreground": "#5c5c5c"
    },
    "FIXME": {
      "foreground": "#cc7b3c"
    }
  },
  "todo-tree.regex.regex": "(%|//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
  // #endregion
  // MarkDown #region
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "markdown.marp.enableHtml": true,
  "markdown.marp.themes": [
    "yuji-theme.css"
  ],
  // #endregion
  // JSON #region
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // #endregion
  // Text #region
  // #endregion
  // other #region
  "csv-edit.readOption_hasHeader": "true",
  "git.ignoreMissingGitWarning": true,
  "svg.preview.mode": "svg",
  // #endregion
  // temporary settings
  "files.autoSave": "afterDelay",
  "git.openRepositoryInParentFolders": "always"
}