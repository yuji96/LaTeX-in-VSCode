{
  // LaTeX
  "[latex]": {
    "editor.defaultFormatter": null,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.autoClean.run": "never",
  "latex-workshop.message.warning.show": false,
  "latex-workshop.message.error.show": false,

  // Run on Save
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.tex$",
        "cmd": "cd ${fileDirname} && latexmk -pdf -file-line-error -interaction=nonstopmode -outdir=out ${fileBasename}"
        // "cmd": "cd ${fileDirname} && latexmk -latex='uplatex' -file-line-error -interaction=nonstopmode -outdir=out ${fileBasename}"
      },
      {
        "match": "\\.tex$",
        "cmd": "cd ${fileDirname} && mv out/${fileBasenameNoExt}.pdf . ; rm -r out __latexindent_temp.*"
      }
    ]
  }
}
